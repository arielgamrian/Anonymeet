<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layoutDirection="ltr"
    tools:context="com.Tapp.Anonymeet1.GPS.RegisterActivity"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_layout"
        android:id="@+id/toolBar1"
        />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:layout_marginTop="250dp"/>

    <EditText
        android:layout_margin="15dp"
        android:padding="20dp"
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Nickname"
        android:textSize="25sp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/edit_text"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_margin="15dp"
        android:padding="20dp"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Password"
        android:textSize="25sp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:background="@drawable/edit_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/login_button"
        android:onClick="attemptLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_alignLeft="@id/nickname"
        android:background="@drawable/ripple_button"
        android:text="Anonymeet"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:elevation="50dp"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/login_button"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/login_button"
        android:checkedButton="@+id/male_button"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="17sp"
            android:id="@+id/male_button"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="17sp"
            android:id="@+id/female_button"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

    </RadioGroup>

</RelativeLayout>
